<section class="vf-banner ws10-u--1/1" data-js="_banner">
    <div class="ws10-o-wrapper">
        <div class="ws10-o-layout">
            <div class="vf-banner__textcontainer ws10-o-layout__item ws10-u--2/3@desktop ws10-u--3/5@tablet">
                {{!-- OFERTA TRY --}}
                <span class="ws10-u-heading--4">
                    {{ banner.heading4.[0] }} <strong>{{ banner.heading4.[1] }}</strong>
                </span>
                <p class="ws10-u-heading--2-lt ws10-u--pt5x ws10-u--4/5@desktop">
                    <strong>{{ banner.heading2.[0] }} </strong> {{ banner.heading2.[1] }} <strong>{{ banner.heading2.[2] }}</strong></p>
                <span
                    class="ws10-u-color--primary ws10-flex ws10-flex__align-items--center ws10-u--hidden-visually-until@tablet"><img
                        class="ws10-u--pr1x" alt="icono mejor precio Vodafone"
                        src="img/banner/icono-bestprice.svg"><span>{{ banner.bestPrice }}</span></span>

            </div>
            <div class="vf-ticket ws10-o-layout__item ws10-u--1/3@desktop ws10-u--2/5@tablet" data-js-vf="_ticket">
                <div class="vf-ticket__floating">
                    <h2 class="ws10-u-heading--5 ws10-u-heading--5-lt">
                        {{ ticket.heading }}
                    </h2>
                    <section class="ws10-c-card ws10-c-card-rate" data-ws10-js="card-rate">
                        <div class="ws10-c-card-rate__w-rates">
                            <div class="ws10-c-card-rate__a-rate">
                                <ul class="ws10-c-card-rate__product-info"
                                    data-vfes-seo-empathy-promoperiod="50% dto. 3 meses Permanencia 1 aÃ±o"
                                    data-vfes-seo-empathy-promoprice="31,99" data-vfes-seo-empathy-price="74,99">
                                    <li class="ws10-c-card-rate__product-info-item">
                                        <svg class="ws10-c-card-rate__product-icon ws10-u-color--black"
                                            xmlns="http://www.w3.org/2000/svg"
                                            xmlns:xlink="http://www.w3.org/1999/xlink">
                                            <use xlink:href="#icon-mobile"></use>
                                        </svg>

                                        <div class="ws10-c-card-rate__product">
                                            <p class="ws10-c-card-rate__product-title">
                                                {{ ticket.description.[0].title }}
                                            </p>
                                            <p
                                                class="ws10-c-card-rate__product-txt ws10-c-card-rate__product-txt--primary">
                                                {{ ticket.description.[0].subtitle }}
                                                <svg class="ws10-c-card-rate__product-txt-icon"
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    xmlns:xlink="http://www.w3.org/1999/xlink">
                                                    <use xlink:href="#icon-thunder-2grey"></use>
                                                </svg>
                                            </p>
                                        </div>
                                    </li>
                                    <li class="ws10-c-card-rate__product-info-item" data-js-vf="_secondLine">
                                        <svg class="ws10-c-card-rate__product-icon ws10-u-color--black"
                                            xmlns="http://www.w3.org/2000/svg"
                                            xmlns:xlink="http://www.w3.org/1999/xlink">
                                            <use xlink:href="#icon-sim"></use>
                                        </svg>
                                        <div class="ws10-c-card-rate__product">
                                            <p class="ws10-c-card-rate__product-title">
                                                {{ ticket.description.[1].title }}
                                            </p>
                                            <p class="ws10-c-card-rate__product-txt">
                                                {{ ticket.description.[1].subtitle }}
                                            </p>
                                        </div>
                                    </li>
                                    <li class="ws10-c-card-rate__product-info-item">

                                        <svg class="ws10-c-card-rate__product-icon ws10-u-color--black"
                                            xmlns="http://www.w3.org/2000/svg"
                                            xmlns:xlink="http://www.w3.org/1999/xlink">
                                            <use xlink:href="#icon-broadband-or-wifi"></use>
                                        </svg>
                                        <div class="ws10-c-card-rate__product">
                                            <p class="ws10-c-card-rate__product-title">
                                                {{ ticket.description.[2].title }}
                                            </p>
                                            <p class="ws10-c-card-rate__product-txt">
                                                {{ ticket.description.[2].subtitle }}
                                            </p>
                                        </div>
                                    </li>
                                </ul>

                                <form action="" method="get" class="vf-form ws10-c-card-rate__form ws10-c-form"
                                    data-js-vf="_showOrHideSticky">
                                    <fieldset>
                                        <legend class="ws10-c-card-rate__form-title">
                                            {{ ticket.form.legend }}
                                        </legend>
                                        <div class="ws10-c-card-rate__w-form-select">
                                            <div class="vf-form__box ws10-c-form__box"
                                                data-analytics-category="{{ ticket.form.portability.category }}"
                                                data-analytics-id="{{ ticket.form.portability.id }}">
                                                <input type="radio" name="rate-1-card-rate"
                                                    id="rate-1-card-rate-option-1" class="ws10-c-form__radio"
                                                    data-analytics-element="{{ ticket.form.portability.element }}"
                                                    data-analytics-context="{{ ticket.form.portability.context }}"
                                                    data-analytics-category="{{ ticket.form.portability.category }}"
                                                    checked>
                                                <label for="rate-1-card-rate-option-1"
                                                    class="ws10-c-card-rate__form-label ws10-c-form__label"
                                                    data-js-vf="_buttonTypeLine">
                                                    {{ ticket.form.portability.label }}
                                                </label>
                                            </div>
                                            <div class="vf-form__box s10-c-form__box"
                                                data-analytics-category="{{ ticket.form.newNumber.category }}"
                                                data-analytics-element="{{ ticket.form.newNumber.element }}"
                                                data-analytics-context="{{ ticket.form.newNumber.context }}"
                                                data-analytics-id="{{ ticket.form.newNumber.id }}">
                                                <input type="radio" name="rate-1-card-rate"
                                                    id="rate-1-card-rate-option-2" class="ws10-c-form__radio"
                                                    data-analytics-element="{{ ticket.form.newNumber.element }}"
                                                    data-analytics-context="{{ ticket.form.newNumber.context }}"
                                                    data-analytics-category="{{ ticket.form.newNumber.category }}">
                                                <label for="rate-1-card-rate-option-2"
                                                    class="ws10-c-card-rate__form-label ws10-c-form__label"
                                                    data-js-vf="_buttonTypeLine" data-js-vf-value="newNumber">
                                                    {{ ticket.form.newNumber.label }}</label>
                                            </div>
                                        </div>
                                    </fieldset>

                                    <div>
                                        <p class="ws10-c-card-rate__dto ws10-c-card-rate__dto--percent ws10-u--m1x">
                                            {{ ticket.offers.portability.dtoPercent }}
                                        </p>
                                        <div class="ws10-c-card-rate__w-cta ws10-u--mt1x" data-js-vf="_portability">
                                            <div class="ws10-c-card-rate__w-offers">
                                                <div class="ws10-c-card-rate__offer" id="rate-1-offer-1">
                                                    <p class="ws10-c-card-rate__dto ws10-c-card-rate__dto--label">
                                                        {{ ticket.offers.portability.dtoLabel }}
                                                    </p>
                                                    <p class="ws10-c-card-rate__dto ws10-c-card-rate__dto--price">
                                                        <del>{{ ticket.offers.portability.dtoFinalPrice }}â¬/mes</del>
                                                    </p>
                                                    <p class="ws10-c-card-rate__price ws10-u-color--black">
                                                        {{ ticket.offers.portability.dtoPrice }}â¬<sub>/mes</sub>
                                                    </p>
                                                </div>
                                            </div>
                                            <a href="{{ ticket.offers.portability.cta.url }}"
                                                type="submit" name="cta" title="{{ ticket.offers.portability.cta.label }}"
                                                class="ws10-c-button ws10-c-button--auto"
                                                data-analytics-element="{{ ticket.offers.portability.cta.element }}"
                                                data-analytics-context="{{ ticket.offers.portability.cta.context }}"
                                                data-analytics-category="{{ ticket.offers.portability.cta.category }}"
                                                data-analytics-id="{{ ticket.offers.portability.cta.id }}"
                                                onmousedown="addtocart(utag_data.plans_add2cart[1])">
                                                {{ ticket.offers.portability.cta.label }}
                                            </a>
                                        </div>
                                        {{!-- <p
                                            class="ws10-c-card-rate__dto ws10-c-card-rate__dto--percent ws10-u--mb1x">
                                            A precio de 300Mbps + 50% dto. 3 meses
                                        </p> --}}
                                        <div class="ws10-c-card-rate__w-cta ws10-u--mt1x ws10-u--hidden"
                                            data-js-vf="_newNumber">
                                            <div class="ws10-c-card-rate__w-offers">
                                                <div class="ws10-c-card-rate__offer" id="rate-1-offer-1">
                                                    <p class="ws10-c-card-rate__dto ws10-c-card-rate__dto--label">
                                                        {{ ticket.offers.newNumber.dtoLabel }}
                                                    </p>
                                                    <p class="ws10-c-card-rate__dto ws10-c-card-rate__dto--price">
                                                        <del>{{ ticket.offers.newNumber.dtoFinalPrice }}â¬/mes</del>
                                                    </p>
                                                    <p class="ws10-c-card-rate__price ws10-u-color--black">
                                                        {{ ticket.offers.newNumber.dtoPrice }}â¬<sub>/mes</sub>
                                                    </p>
                                                </div>
                                            </div>
                                            <a href="{{ ticket.offers.newNumber.cta.url }}"
                                                type="submit" name="cta" title="{{ ticket.offers.newNumber.cta.label }}"
                                                class="ws10-c-button ws10-c-button--auto"
                                                data-analytics-element="{{ ticket.offers.newNumber.cta.element }}"
                                                data-analytics-context="{{ ticket.offers.newNumber.cta.context }}"
                                                data-analytics-category="{{ ticket.offers.newNumber.cta.category }}"
                                                data-analytics-id="{{ ticket.offers.newNumber.cta.id }}"
                                                onmousedown="addtocart(utag_data.plans_add2cart[1])">
                                                {{ ticket.offers.newNumber.cta.label }}
                                            </a>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

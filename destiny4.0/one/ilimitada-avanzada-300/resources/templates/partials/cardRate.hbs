<div class="vf-ticket ws10-o-layout__item ws10-u--1/3@desktop ws10-u--2/5@tablet" style="top: 40px;" data-js-vf="_ticket">
    <div class="vf-ticket__floating">
        <section class="ws10-c-card ws10-c-card-rate ws10-c-card--no-shadow" data-ws10-js="card-rate">
            <div class="ws10-c-card-rate__w-rates">
                <div class="ws10-c-card-rate__a-rate">
                    <ul class="ws10-c-card-rate__product-info"
                        data-vfes-seo-empathy-promoperiod="{{ offers.promoPeriod }}"
                        data-vfes-seo-empathy-promoprice="{{ offers.dtoPrice }}"
                        data-vfes-seo-empathy-price="{{ offers.dtoFinalPrice }}">
                        {{#each description }}
                        <li class="ws10-c-card-rate__product-info-item">
                            <svg class="ws10-c-card-rate__product-icon ws10-u-color--black"
                                xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <use xlink:href="#{{ icon }}"></use>
                            </svg>
                            <div class="ws10-c-card-rate__product">
                                <p class="ws10-c-card-rate__product-title">
                                    {{ title }}
                                </p>
                                <p class="ws10-c-card-rate__product-txt ws10-c-card-rate__product-txt--primary">
                                    {{ subtitle }}
                                    {{#if secondIcon }}
                                    <svg class="ws10-c-card-rate__product-txt-icon"
                                        xmlns="http://www.w3.org/2000/svg"
                                        xmlns:xlink="http://www.w3.org/1999/xlink">
                                        <use xlink:href="#{{ secondIcon }}"></use>
                                    </svg>
                                    {{/if }}
                                </p>
                            </div>
                        </li>
                        {{/each }}
                    </ul>

                    <form action="" method="get" class="vf-form ws10-c-card-rate__form ws10-c-form" data-js-vf="_showOrHideSticky">
                        <fieldset>
                            <legend class="ws10-c-card-rate__form-title">
                                ¿Cómo quieres la línea móvil principal?
                            </legend>
                            <div class="ws10-c-card-rate__w-form-select">
                                <div class="vf-form__box ws10-c-form__box">
                                    <input type="radio" name="rate-1-card-rate" id="rate-1-card-rate-option-1" class="ws10-c-form__radio"
                                      data-analytics-element="cardrate"
                                      data-analytics-context="portabilidad"
                                      data-analytics-category="cta"
                                      checked/>
                                    <label for="rate-1-card-rate-option-1" class="ws10-c-card-rate__form-label ws10-c-form__label" data-js-vf="_buttonTypeLine">
                                        Portabilidad
                                    </label>
                                </div>
                                <div class="vf-form__box s10-c-form__box">
                                    <input type="radio" name="rate-1-card-rate" id="rate-1-card-rate-option-2"
                                      class="ws10-c-form__radio"
                                      data-analytics-element="cardrate"
                                      data-analytics-context="alta nueva"
                                      data-analytics-category="cta"
                                      />
                                      <label for="rate-1-card-rate-option-2" class="ws10-c-card-rate__form-label ws10-c-form__label" data-js-vf="_buttonTypeLine" data-js-vf-value="newNumber">
                                          Nuevo Número
                                      </label>
                                  </div>
                              </div>
                          </fieldset>

                          {{#each prizes }}
                              <div class="ws10-c-card-rate__w-cta {{ hidden }}" data-js-vf="{{ js-vf }}">
                                  <div class="ws10-c-card-rate__w-offers">
                                      <div class="ws10-c-card-rate__offer" id="rate-1-offer-1">
                                          <p class="ws10-c-card-rate__dto ws10-c-card-rate__dto--percent">
                                              {{ offers.discount }}
                                          </p>
                                          <p class="ws10-c-card-rate__dto ws10-c-card-rate__dto--label">
                                              {{ offers.label }}
                                          </p>
                                          <p class="ws10-c-card-rate__dto ws10-c-card-rate__dto--price">
                                              {{{ offers.discountPrice }}}
                                          </p>
                                          <p class="ws10-c-card-rate__price ws10-u-color--black">
                                              {{{ offers.finalPrice }}}
                                          </p>
                                      </div>
                                  </div>
                                  {{> cta cta }}
                              </div>
                          {{/each }}
                      </form>

                </div>
            </div>
        </section>
    </div>
</div>

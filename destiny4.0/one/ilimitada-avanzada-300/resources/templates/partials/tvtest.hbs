<section class="vf-tv ws10-u--pt12x">
  <h3 class="ws10-flex ws10-flex__direction--column ws10-u--mb0">
    <span class="ws10-u-heading--4 ws10-u--mb0 ws10-u-heading--4-lt">
      {{tv.title}}
    </span>
    <span class="ws10-u-heading--3 ws10-u--mb0">
      <strong>{{tv.heading}}</strong>
    </span>
  </h3>
  <p class="ws10-u-heading--3 ws10-u-heading--3-lt">
    {{tv.heading2}}
  </p>
  <p class="ws10-u--pt5x">
    {{tv.description}}
  </p>
  <div class="ws10-c-logo-list ws10-c-logo-list--mini">
    <ul class="ws10-c-logo-list__list">
      <li class="ws10-c-logo-list__item">
        <picture>
          <source
            class="ws10-c-logo-list__logo"
            srcset="img/section-tv/amc-desktop.webp"
            type="image/webp"
          />
          <source
            class="ws10-c-logo-list__logo"
            srcset="img/section-tv/amc-desktop.png"
            type="image/jpg"
          />
          <img src="img/section-tv/amc-desktop.png" alt="logo AMC" />
        </picture>
      </li>
      <li class="ws10-c-logo-list__item">
        <picture>
          <source
            class="ws10-c-logo-list__logo"
            srcset="img/section-tv/eurosport-desktop.webp"
            type="image/webp"
          />
          <source
            class="ws10-c-logo-list__logo"
            srcset="img/section-tv/eurosport-desktop.png"
            type="image/jpg"
          />
          <img
            src="img/section-tv/eurosport-desktop.png"
            alt="logo Eurosport"
          />
        </picture>
      </li>
      <li class="ws10-c-logo-list__item">
        <picture>
          <source
            class="ws10-c-logo-list__logo"
            srcset="img/section-tv/tcm-desktop.webp"
            type="image/webp"
          />
          <source
            class="ws10-c-logo-list__logo"
            srcset="img/section-tv/tcm-desktop.png"
            type="image/jpg"
          />
          <img src="img/section-tv/tcm-desktop.png" alt="logo TCM" />
        </picture>
      </li>
    </ul>
    <p class="ws10-c-logo-list__w-show-all">
      <a
        class="ws10-c-logo-list__show-all vfms-link"
        aria-haspopup="dialog"
        data-backdrop="seriefans"
        data-analytics-context="ver todos los canales incluidos"
        data-analytics-element="card addons"
        data-analytics-category="cta"
        data-analytics-id="-6241792886380"
      >
        {{tv.allChannels}}
      </a>
    </p>
    <span
      class="ws10-c-carousel__helperText"
      id="idList"
      style="left: 0; position:relative;"
    >
      {{tv.info}}
    </span>
  </div>
</section>
<section class="vf-tv ws10-u--pt12x">
  <h3 class="ws10-flex ws10-flex__direction--column ws10-u--mb0">
    <span class="ws10-u-heading--4 ws10-u--mb0 ws10-u-heading--4-lt">
        {{ tv.section }}
    </span>
    <span class="ws10-u-heading--3 ws10-u--mb0">
        <strong>{{ tv.title }}</strong>
    </span>
  </h3>
  <p class="ws10-u-heading--3 ws10-u-heading--3-lt">
      {{ tv.subtitle }}
  </p>
  <p class="ws10-u--pt5x">
      {{ tv.description }}
  </p>
  <div class="ws10-c-logo-list ws10-c-logo-list--mini">
      <ul class="ws10-c-logo-list__list">
        {{#each tv.img}}
        <li class="ws10-c-logo-list__item">
          {{> picture params=this}}
        </li>
        {{/each}}
      </ul>
    <p class="ws10-c-logo-list__w-show-all">
      <a
        class="ws10-c-logo-list__show-all vfms-link"
       aria-haspopup="dialog"
       data-backdrop="seriefans"
        data-analytics-context="{{ tv.allChannels }}"
        data-analytics-element="card addons"
        data-analytics-category="cta"
        data-analytics-id="-6241792886380"
      >
        {{ tv.allChannels }}
      </a>
    </p>
    <span
      class="ws10-c-carousel__helperText"
      id="idList"
      style="left: 0; position:relative;"
    >
    {{ tv.info }}
    </span>
  </div>
</section>

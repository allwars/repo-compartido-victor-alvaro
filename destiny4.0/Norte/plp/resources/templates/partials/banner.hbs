<!-- banner -->
<section class="vf-banner">
  <div class="vf-banner__container ws10-o-wrapper">
    <div class="ws10-o-layout ws10-u--pb0 ws10-u--pt6x">
      <div class="ws10-o-layout__item ws10-u--1/2@desktop">
        <h2 class="ws10-u-heading--4 ws10-u--mb2x">{{{ banner.title }}}</h2>
        <b
          class="ws10-c-badge-text ws10-c-badge-text--turquoise ws10-u--mt2x ws10-u--mr1x vfms-badge3"
        >{{ banner.badge }}</b>
        <p class="ws10-u-heading--1-lt ws10-flex ws10-flex__direction--column vfms-title-banner ws10-u--mt2x">
            <span>{{{ banner.title2 }}}</span>
        </p>
      </div>
      <div class="ws10-o-layout__item ws10-u--1/2@desktop">
        <picture>
          <source
            media="(min-width:768px)"
            srcset="img/bodegon-desktop.webp"
            type="image/webp"
          />
          <source
            media="(min-width:768px)"
            srcset="img/bodegon-desktop.png"
            type="image/png"
          />
          <source srcset="img/bodegon-mobile.webp" type="image/webp" />
          <img src="img/bodegon-desktop.png" />
        </picture>
      </div>
    </div>
  </div>
</section>

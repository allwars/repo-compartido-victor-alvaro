<picture>
  {{#if imgPng}}
    <source class="{{class}}" srcset="{{imgPng}}.webp" type="image/webp" />
    <source class="{{class}}" srcset="{{imgPng}}.png" type="image/png" />
    <img src="{{imgPng}}" alt="{{alt}}" />
  {{else}}
    <source class="{{class}}" srcset="{{imgJpg}}.webp" type="image/webp" />
    <source class="{{class}}" srcset="{{imgJpg}}.jpg" type="image/jpg" />
    <img src="{{imgJpg}}" alt="{{alt}}" />
  {{/if}}
</picture>
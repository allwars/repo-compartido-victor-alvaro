<!-- BANNER & TICKET -->
<section class="vf-banner ws10-u--1/1" data-js="_banner">
  <div class="ws10-o-wrapper">
    <div class="ws10-o-layout">
      <div
        class="vf-banner__textcontainer ws10-o-layout__item ws10-u--2/3@desktop ws10-u--3/5@tablet"
      >
        {{! OFERTA TRY }}
        <span class="ws10-u-heading--4">
          Fibra + Móvil
          <strong>{{banner.heading.[1]}}</strong></span>
        <h2
          class="ws10-u-heading--2-lt ws10-u--pt5x ws10-u--3/4@desktop"
        ><strong>Todo lo que necesitas</strong>
          para estar
          <strong>conectado fuera y dentro</strong>
          de tu casa</h2>
        <a
          class="ws10-c-link-chevron ws10-c-link-chevron--primary"
          target="_blank"
          href="https://www.vodafone.es/c/particulares/es/colectivos-vodafone/plp/"
          data-analytics-element="modulo inferior"
          data-analytics-context="condiciones legales"
          data-analytics-category="cta"
          data-analytics-id="-5460257368589"
        >
          Volver a ver las ofertas
          <span class="ws10-u--hidden-visually"></span>
          <svg
            class="ws10-c-link-chevron__icon"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            width="24px"
            height="24px"
          >
            <use class="icon-v3" xlink:href="#icon-chevron-right"></use>
          </svg>
        </a>
      </div>
      <h2 class="ws10-u-heading--5 ws10-u-heading--5-lt ws10-u--mb0 vf-ticket ws10-o-layout__item ws10-u--1/3@desktop ws10-u--2/5@tablet">
          {{ ticket.heading }}
      </h2>
      <div
        class="vf-ticket ws10-o-layout__item ws10-u--1/3@desktop ws10-u--2/5@tablet"
        data-js-vf="_ticket"
      >
        <div class="vf-ticket__floating">
          <section
            class="ws10-c-card ws10-c-card-rate ws10-c-card--no-shadow"
            data-ws10-js="card-rate"
          >
              <div class="ws10-c-card-rate__w-rates">
              <div class="ws10-c-card-rate__a-rate">
                <ul
                  class="ws10-c-card-rate__product-info"
                  data-vfes-seo-empathy-promoperiod=""
                  data-vfes-seo-empathy-promoprice=""
                  data-vfes-seo-empathy-price=""
                >
                  <li class="ws10-c-card-rate__product-info-item">
                    <svg
                      class="ws10-c-card-rate__product-icon ws10-u-color--black"
                      xmlns="http://www.w3.org/2000/svg"
                      xmlns:xlink="http://www.w3.org/1999/xlink"
                    >
                      <use xlink:href="#icon-mobile"></use>
                    </svg>

                    <div class="ws10-c-card-rate__product">
                      <p class="ws10-c-card-rate__product-title">
                        {{ ticket.description.0.title }}
                      </p>
                      <p
                        class="ws10-c-card-rate__product-txt ws10-c-card-rate__product-txt--primary"
                      >
                        {{ ticket.description.0.subtitle }}
                        <svg
                          class="ws10-c-card-rate__product-txt-icon"
                          xmlns="http://www.w3.org/2000/svg"
                          xmlns:xlink="http://www.w3.org/1999/xlink"
                        >
                          <use xlink:href="#{{ ticket.description.0.icon }}"></use>
                        </svg>
                      </p>
                    </div>
                  </li>
                  <li
                    class="ws10-c-card-rate__product-info-item"
                    data-js-vf="_portability"
                  >
                    <svg
                      class="ws10-c-card-rate__product-icon ws10-u-color--black"
                      xmlns="http://www.w3.org/2000/svg"
                      xmlns:xlink="http://www.w3.org/1999/xlink"
                    >
                      <use xlink:href="#icon-sim"></use>
                    </svg>
                    <div class="ws10-c-card-rate__product">
                      <p class="ws10-c-card-rate__product-title">
                        {{ ticket.description.1.title }}
                      </p>
                      <p class="ws10-c-card-rate__product-txt">
                        {{ ticket.description.1.subtitle }}
                      </p>
                    </div>
                  </li>
                  <li class="ws10-c-card-rate__product-info-item">

                    <svg
                      class="ws10-c-card-rate__product-icon ws10-u-color--black"
                      xmlns="http://www.w3.org/2000/svg"
                      xmlns:xlink="http://www.w3.org/1999/xlink"
                    >
                      <use xlink:href="#icon-broadband-or-wifi"></use>
                    </svg>
                    <div class="ws10-c-card-rate__product">
                      <p class="ws10-c-card-rate__product-title">
                       {{ velocidad }} {{ ticket.description.2.title }}
                      </p>
                      <p class="ws10-c-card-rate__product-txt">
                        {{ ticket.description.2.subtitle }}
                      </p>
                    </div>
                  </li>
                  <li class="ws10-c-card-rate__product-info-item">
                    <svg
                      class="ws10-c-card-rate__product-icon ws10-u-color--black"
                      xmlns="http://www.w3.org/2000/svg"
                      xmlns:xlink="http://www.w3.org/1999/xlink"
                    >
                      <use xlink:href="#icon-tv"></use>
                    </svg>
                    <div class="ws10-c-card-rate__product">
                      <p class="ws10-c-card-rate__product-title">
                        {{ ticket.description.3.title }}
                      </p>
                      <p
                        class="ws10-c-card-rate__product-txt"
                        style="font-size: 17px;"
                      >
                        {{ ticket.description.3.subtitle }}
                      </p>
                    </div>
                  </li>

                </ul>

                <form
                  action=""
                  method="get"
                  class="vf-form ws10-c-card-rate__form ws10-c-form"
                  data-js-vf="_showOrHideSticky"
                >
                  <fieldset>
                    <legend class="ws10-c-card-rate__form-title">
                      ¿Cómo quieres la línea móvil principal?
                    </legend>
                    <div class="ws10-c-card-rate__w-form-select">
                      <div
                        data-cta="portabilidad:cardrate:div"
                        class="vf-form__box ws10-c-form__box"
                      >
                        <input
                          type="radio"
                          name="rate-1-card-rate"
                          id="rate-1-card-rate-option-1"
                          class="ws10-c-form__radio"
                          data-analytics-element="cardrate"
                          data-analytics-context="portabilidad"
                          data-analytics-category="cta"
                          checked
                        />
                        <label
                          for="rate-1-card-rate-option-1"
                          class="ws10-c-card-rate__form-label ws10-c-form__label"
                          data-js-vf="_buttonTypeLine"
                          data-js-vf-value="portability"
                        >
                          Portabilidad
                        </label>
                      </div>
                      <div
                        data-cta="nuevo:cardrate:div"
                        class="vf-form__box s10-c-form__box"
                      >
                        <input
                          type="radio"
                          name="rate-1-card-rate"
                          id="rate-1-card-rate-option-2"
                          class="ws10-c-form__radio"
                          data-analytics-element="cardrate"
                          data-analytics-context="alta nueva"
                          data-analytics-category="cta"
                        />
                        <label
                          for="rate-1-card-rate-option-2"
                          class="ws10-c-card-rate__form-label ws10-c-form__label"
                          data-js-vf="_buttonTypeLine"
                          data-js-vf-value="newNumber"
                        >Nuevo Número</label>
                      </div>
                    </div>
                  </fieldset>
                  <div>
                    <p
                      class="ws10-c-card-rate__dto ws10-c-card-rate__dto--price"
                    >
                      <strong>{{banner.heading.[1]}}</strong>
                    </p>
                    <div
                      class="ws10-c-card-rate__w-cta ws10-u--mt1x"
                      data-js-vf="_portability"
                    >
                      <div class="ws10-c-card-rate__w-offers">
                        <div
                          class="ws10-c-card-rate__offer"
                          id="rate-1-offer-1"
                        >
                          <p class="ws10-c-card-rate__form-title">
                            {{ permanencia }}
                          </p>
                          <p
                            class="ws10-c-card-rate__price ws10-u-color--black"
                          >
                            {{ ticket.offers.portability.dtoPrice }}€<sub>/mes</sub>
                          </p>
                        </div>
                      </div>
                      <a
                        data-cta="300:port:card"
                        type="submit"
                        title="{{cta.title}}"
                        class="ws10-c-button ws10-c-button--auto"
                        href="https://www.vodafone.es/c/tienda-online/particulares/contratacion?id={{ cta.loquiero.[0] }}&tcli=0&tta=1"
                        onmousedown="addtocart(utag_data.plans_add2cart[0])"
                        data-analytics-element="{{ticket.offers.portability.cta.element}}"
                        data-analytics-context="{{ticket.offers.portability.cta.context}}"
                        data-analytics-category="{{ticket.offers.portability.cta.category}}"
                        data-analytics-id="{{ticket.offers.portability.cta.id}}"
                      >
                        {{cta.title}}
                        <span
                          class="ws10-u--hidden-visually"

                        ></span>
                      </a>
                    </div>
                    <div
                      class="ws10-c-card-rate__w-cta ws10-u--mt1x ws10-u--hidden"
                      data-js-vf="_newNumber"
                    >
                      <div class="ws10-c-card-rate__w-offers">
                        <div
                          class="ws10-c-card-rate__offer"
                          id="rate-1-offer-1"
                        >
                          <p class="ws10-c-card-rate__form-title">
                            {{ permanencia }}
                          </p>
                          <p
                            class="ws10-c-card-rate__price ws10-u-color--black"
                          >
                            {{ ticket.offers.newNumber.dtoPrice }}€<sub>/mes</sub>
                          </p>
                        </div>
                      </div>
                         <a
                        data-cta="300:port:card"
                        type="submit"
                        title="{{cta.title}}"
                        class="ws10-c-button ws10-c-button--auto"
                        href="https://www.vodafone.es/c/tienda-online/particulares/contratacion?id={{ cta.loquiero.[1] }}&tcli=0&tta=1"
                        onmousedown="addtocart(utag_data.plans_add2cart[1])"
                        data-analytics-element="{{ticket.offers.newNumber.cta.element}}"
                        data-analytics-context="{{ticket.offers.newNumber.cta.context}}"
                        data-analytics-category="{{ticket.offers.newNumber.cta.category}}"
                        data-analytics-id="{{ticket.offers.newNumber.cta.id}}"
                      >
                        {{cta.title}}
                        <span
                          class="ws10-u--hidden-visually"

                        ></span>
                      </a>
                    </div>

                  </div>
                </form>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</section>
